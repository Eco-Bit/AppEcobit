<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MyAccountActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_marginTop="40dp"
        android:id="@+id/toolbarMyAccount"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/bg_navbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/new_ecobit_logo" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <Button
        android:id="@+id/btnDoacao"
        android:layout_width="272dp"
        android:layout_height="59dp"
        android:backgroundTint="#FFFFFF"
        android:elevation="10dp"
        android:stateListAnimator="@null"
        android:text="Suas Doações"
        android:textColor="#323334"
        android:textSize="15sp"
        android:textStyle="bold"
        app:icon="@drawable/ic_chat_profile"
        app:iconGravity="end"
        app:iconPadding="-25sp"
        app:iconSize="25sp"
        app:iconTint="@color/ic_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.57" />

    <Button
        android:id="@+id/btnPerfil"
        android:layout_width="272dp"
        android:layout_height="59dp"
        android:backgroundTint="#FFFFFF"
        android:elevation="10dp"
        android:stateListAnimator="@null"
        android:text="Perfil"
        android:textAlignment="center"
        android:textColor="#323334"
        android:textSize="15sp"
        android:textStyle="bold"
        app:icon="@drawable/ic_perfil"
        app:iconGravity="end"
        app:iconPadding="-20sp"
        app:iconSize="25sp"
        app:iconTint="#C4AB8C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47" />

    <Button
        android:id="@+id/btnContato"
        android:layout_width="272dp"
        android:layout_height="59dp"
        android:backgroundTint="#FFFFFF"
        android:elevation="10dp"
        android:stateListAnimator="@null"
        android:text="Nos contate"
        android:textColor="#323334"
        android:textSize="15sp"
        android:textStyle="bold"
        app:icon="@drawable/ic_contato_profile"
        app:iconGravity="end"
        app:iconPadding="-25sp"
        app:iconSize="25sp"
        app:iconTint="@color/ic_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.78" />

    <Button
        android:id="@+id/btnFaq"
        android:layout_width="272dp"
        android:layout_height="59dp"
        android:backgroundTint="#FFFFFF"
        android:elevation="10dp"
        android:stateListAnimator="@null"
        android:text="FAQ's"
        android:textColor="#323334"
        android:textSize="15dp"
        android:textStyle="bold"
        app:icon="@drawable/ic_faq_profile"
        app:iconGravity="end"
        app:iconPadding="-20sp"
        app:iconSize="25sp"
        app:iconTint="@color/ic_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.67" />

    <Button
        android:id="@+id/btnSair"
        android:layout_width="272dp"
        android:layout_height="59dp"
        android:backgroundTint="#FFFFFF"
        android:elevation="10dp"
        android:stateListAnimator="@null"
        android:text="Sair"
        android:textColor="#323334"
        android:textSize="15sp"
        android:textStyle="bold"
        app:icon="@drawable/ic_sair_profile"
        app:iconGravity="end"
        app:iconPadding="-25sp"
        app:iconSize="30sp"
        app:iconTint="@color/ic_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.88" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.167"
        app:srcCompat="@drawable/profile_image" />


    <TextView
        android:id="@+id/textUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carregar imagem"
        android:textColor="#323334"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.37" />

    <ImageView
        android:id="@+id/btnVoltar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17"
        app:srcCompat="@drawable/ic_back_arrow" />


</androidx.constraintlayout.widget.ConstraintLayout>